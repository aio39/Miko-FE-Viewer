$front: 14
$front-middle: 8
$back: 18
$back-middle: 9

@mixin front-x() 
  @for $i from 1 through $front
    @keyframes randomShotFront#{$i}
      0%
        opacity:0
        transform: translateY(0%)
      100%
        opacity:1
        @if $i<$front-middle
          transform: translateY(-((random(60)+15)*1%)) translateX(-((random($i*6)+$i)*1%))
        @else
          transform: translateY(-((random(60)+15)*1%)) translateX(((random($i*3)+$i)*1%))
    #front#{$i} 
      // fill: #55557b
      opacity:0
      animation-name: randomShotFront#{$i}
      animation-delay: calc(random(500))+ms
      animation-duration: 1s
      animation-fill-mode: forwards
  
@mixin back-x() 
  @for $i from 1 through $back
    @keyframes randomShotBack#{$i}
      0%
        opacity:0
        transform: translateY(0%)
      100%
        opacity:1
        @if $i<$back-middle
          transform: translateY(-((random(50)+20)*1%)) translateX(-((random($i*6)+$i)*1%))
        @else
          transform: translateY(-((random(50)+20)*1%)) translateX(((random($i*3)+$i)*1%))
    #back#{$i}
      // fill: #55557b
      opacity:0
      animation-name: randomShotBack#{$i}
      animation-delay: calc(random(500))+ms
      animation-duration: 1s
      animation-fill-mode: forwards

@include front-x()
@include back-x()



//animation function

// @keyframes wheel 
//   from 
//     transform: rotateZ(360deg)
  
//   to 
//     transform: rotateZ(0deg)

@keyframes fadeIn 
  0% 
    transform: translateY(3%)
    opacity: 0
  
  100% 
    transform: translateY(0%)
    opacity: 100
  
@keyframes fadeOut 
  0% 
    transform: translateY(0%)
    opacity: 100
  100%
    transform: translateY(-3%)
    opacity: 0
  
@keyframes hide
  0%
    opacity:1
  100%
    opacity:0



